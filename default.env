#!/bin/bash
# default.env - Default configuration values for PostgreSQL server initialization
# Part of Milestone 1

# Logging configuration
LOG_LEVEL=1                    # 0=DEBUG, 1=INFO, 2=WARN, 3=ERROR
LOG_FILE="/var/log/server_init.log" # Default log file location
SYSTEM_LOG_FILE="/var/log/system_init.log" # System commands output log file

# PostgreSQL version and configuration
PG_VERSION="15"                # PostgreSQL version to install
PG_DATA_DIR="/var/lib/postgresql/${PG_VERSION}/main"
PG_CONF_DIR="/etc/postgresql/${PG_VERSION}/main"

# Database initialization settings
DB_NAME="postgres"             # Default database name
DB_USER="admin"                # Default database user
DB_PORT=5432                   # Default PostgreSQL port

# System settings
SYSTEM_UPDATE=true             # Whether to update system packages
TIMEZONE="HKT"                 # Default timezone

# Security settings
ENABLE_FIREWALL=true           # Whether to enable and configure firewall
ALLOWED_IP_RANGES="*"          # Default allowed IP ranges (all IP addresses)

# Backup settings
BACKUP_ENABLED=false           # Whether automatic backups are enabled
BACKUP_DIR="/var/backups/postgresql"
BACKUP_RETENTION_DAYS=7        # How many days to keep backups 